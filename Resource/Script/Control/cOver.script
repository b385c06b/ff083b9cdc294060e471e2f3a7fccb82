	}

	SELBUILD 2 SI_Result_Save
		320 360 1 0 8
		D 2 D 3
		0 0
		0 0
		0 0
		SEL_NONACTIVE

	SELSET 2 0 false 0 0 0 0
	
	SELBUILD 0x11 SI_Result_Score
		160 110 1 0 8
		D 2 D 3
		0 0
		0 0
		0 0
		SEL_NONACTIVE

	SD [i] 6
	LOOP [i]
	{
		SD [j] 5 - i
		SELBUILD j + 0x12 SI_Result_Faith + j
			160 j * 35 + 145 1 0 8
			D 2 D 3
			0 0
			0 0
			0 0
			SEL_NONACTIVE
	}

	SD [i] 2
	LOOP [i]
	{
		SD [j] i !
		SD [k] 16
		LOOP [k]
		{
			SD [l] 15 - k
			SELBUILD j * 0x10 + 0x20 + l SI_DigitBig_6
				l * 16 + 300 j * 35 + 110 1 0 8
				D 2 D 3
				0 0

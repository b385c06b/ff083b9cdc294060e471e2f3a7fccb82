			SD ptdepth 2
		}
		ELSE
		{
			IF MODE
			{
				BGOFF 4
				SETTIME 0
				SETSTATE STATE_DIFFICULT_SELECT
				RETURN PTURN
			}
			ELSE
			{
				SD ptdepth 7
			}
		}
	}
}
ELSEIF D ptdepth - 3 !
{
